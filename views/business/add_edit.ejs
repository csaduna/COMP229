<% include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Item Name"
                        name="name" 
                        value="<%= item.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="phoneTextField">Quantity</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="00"
                    name="phone" 
                    value="<%= item.phone %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="emailTextField">Status</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter a status"
                    name="email" 
                    value="<%= item.email %>"
                    >
                </div>
                <br />
                
                <button class="btn btn-primary" type="submit">
                    Submit
                </button>
                
                <a href="/business/list" class="btn btn-warning">
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<% include ../partials/footer.ejs %>